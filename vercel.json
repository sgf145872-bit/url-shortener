{
    "version": 2,
    "routes": [
        {
            "src": "/api/shorten",
            "dest": "/api/index.js",
            "methods": ["POST"]
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.js"
        },
        {
            "src": "/public/(.*)",
            "dest": "/public/$1"
        }
    ]
}
