{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/:shortCode",
            "destination": "/api/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/public/$1"
        }
    ]
}
